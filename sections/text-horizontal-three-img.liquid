{{ 'section-text-horizontal-three-img.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
{%- endstyle -%}

<div class="text-horizontal-three-cards">
    <div class="page-width section-{{ section.id }}-padding text-horizontal-three-cards__container">
        <div class="text-horizontal-three-cards__left">
            <h2 class="heading-9 mb-20">As Seen In</h2>
        </div>
        <div class="text-horizontal-three-cards__right">
            <img
                    src="https://uploads-ssl.webflow.com/645577afcb110d04509fc3a6/6458f172fc63904925334686_image%2020.svg"
                    loading="lazy" alt="">
            <img
                    src="https://uploads-ssl.webflow.com/645577afcb110d04509fc3a6/6458f17214621461195ebad2_fox-news%201.svg"
                    loading="lazy" alt="">
            <img
                    src="https://uploads-ssl.webflow.com/645577afcb110d04509fc3a6/6458f1726647ecbeed44ad51_image%2021.svg"
                    loading="lazy" alt="">
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Text three cards",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
